{
  "name": "boilerplate-browser-extension",
  "version": "1.0.0",
  "description": "Sample Browser Extension",
  "main": "index.js",
  "scripts": {
    "cleanup": "rimraf dist",
    "test": "jest --coverage",
    "webpack:test": "yarn run test",
    "webpack:watch": "yarn run cleanup && webpack --config webpack/webpack.dev.js --watch",
    "webpack:dev": "yarn run cleanup && webpack --config webpack/webpack.dev.js",
    "webpack:prod": "yarn run cleanup && webpack --config webpack/webpack.prod.js"
  },
  "author": "Amit Mittal",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "@types/chrome": "0.0.74",
    "@types/firefox-webext-browser": "^64.0.0",
    "@types/jest": "23.3.8",
    "copy-webpack-plugin": "4.5.3",
    "husky": "^1.2.0",
    "inversify": "^5.0.1",
    "jest": "23.6.0",
    "lint-staged": "^8.1.0",
    "npm": "^6.4.1",
    "prettier": "^1.15.3",
    "reflect-metadata": "^0.1.12",
    "replace-in-file-webpack-plugin": "^1.0.6",
    "terser-webpack-plugin": "1.1.0",
    "ts-jest": "23.10.4",
    "ts-loader": "5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-loader": "^3.5.4",
    "typescript": "3.1.3",
    "webpack": "4.20.2",
    "webpack-cli": "3.1.2",
    "webpack-merge": "4.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
