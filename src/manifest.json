{
  "name": "Browser Extension Name",
  "version": "1.0.0",
  "description": "Browser Extension Description",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webRequest",
    "notifications"
  ],
  "background": {
    "scripts": [
      "scripts/main.js",
      "scripts/vendor.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "views/default.html",
    "default_icon": "assets/icon.png",
    "default_title": "Browser Extension Title"
  },
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ]
  }
}
