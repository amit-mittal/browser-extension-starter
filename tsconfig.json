{
  "compilerOptions": {
    /* Basic Options */
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "target": "es6",
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,

    /* Strict type-checking options */
    "noImplicitAny": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Enabled descorators for dependency injection */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}